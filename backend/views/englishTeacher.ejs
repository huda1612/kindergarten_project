<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة المعلم</title>

    <link rel="stylesheet" href="/englishTeacher.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <script>
        const activities = <%- JSON.stringify(activities) %>;
      </script>
</head>

<body>
    <!-- الشريط العلوي -->
    <nav>
        <div class="school-info">
            <i class="fas fa-school school-icon"></i>
            <span>روضة دار الفرح الخاصة</span>
        </div>

        <div class="teacher-info">
            <span class="teacher-name">
                <%= name_With_Nikname %>
            </span>
            <a href="/logout"><button class="logout-btn">تسجيل الخروج</button></a>

            <a href="/classChoose" title="عودة إلى صفوفي" style="margin-inline-end: 12px; display: inline-flex; align-items: center; gap: 6px;">
                <i class="fas fa-arrow-left"></i>
                
            </a>
        </div>
    </nav>

    <!-- الهيكل الرئيسي -->
    <div class="container">
        <!-- القائمة الجانبية -->
        <div class="sidebar">
            <div>
                <h3 style="text-align:center ;  color: #ff6666 ; font-size: 25px;">
                    القائمة الرئيسية 
                </h3>
            </div>           
            <div class="menu-item">
                <i class="fas fa-users"></i>
                <a href="#"><span>إحصائيات الصف  </span></a>
            </div>

            <div class="menu-item">
                <i class="fas fa-puzzle-piece"></i>
                <a href="#activty"><span>قسم الأنشطة</span></a>
            </div>
            <div class="menu-item">
                <i class="fas fa-file"></i>
                <a href="#file"><span>قسم الملفات</span></a>
            </div>
            <div class="menu-item">
                <i class="fas fa-child"></i>
                <a href="#child"><span>قائمة الأطفال</span></a>
            </div>

        </div>

        <!-- المحتوى الرئيسي -->
        <div class="main-content">
            <!-- مربع الترحيب -->
            <div class="welcome-box">
                <h2>مرحبا بك، <%= name_With_Nikname %>
                </h2>
                <p id="current-date">اليوم هو الأحد، 15 أكتوبر 2023</p>
                <% if (typeof className !== 'undefined' && className) { %>
                    <p style="margin-top:6px; font-weight:bold; color:#555;">الصف: <%= className %></p>
                  <% } %>
            </div>

            <!-- المربعات الإحصائية -->
            <div class="stats-container">
                <div class="box1">
                    <i class="fas fa-users"></i>
                    <div>عدد الأطفال</div>
                    <div class="stat-value">
                        <%= student_count %>
                    </div>

                </div>
                <div class="box2">
                    <i class="fas fa-user-check"></i>
                    <div>الحضور اليوم</div>
                    <div class="stat-value">
                        <%= attendance_count %>
                    </div>
                </div>
                <div class="box3">
                    <i class="fas fa-user-times"></i>
                    <div>الغياب اليوم</div>
                    <div class="stat-value">
                        <%= absence_count %>
                    </div>
                </div>
                <div class="box4">
                    <i class="fas fa-puzzle-piece"></i>
                    <div> عدد أنشطة الإنجليزي</div>
                    <div class="stat-value">
                        <%= activity_count %>
                    </div>
                </div>
            </div>



            <!-- قسم الأنشطة -->
            <div class="activities-section">
                <div class="section-title">
                    <h3>أنشطة الإنجليزي اليوم</h3>
                    <button id="showActivitiesByDateBtn" class="add-btn">عرض أنشطة يوم آخر</button>
                    <form id="activitiesByDateForm" style="display:none; margin:10px 0;">
                        <select id="engActsDay"></select>
                        <select id="engActsMonth"></select>
                        <select id="engActsYear"></select>
                        <button type="button" id="showActivitiesBtn" class="add-btn">عرض</button>
                        <button type="button" id="cancelShowActivitiesBtn" class="add-btn">إلغاء</button>
                      </form>
                    <button id="addActivityBtn" class="add-btn">إضافة نشاط</button>
                </div>
            
                
            
                <!-- فورم إضافة نشاط جديد -->
                <div id="addActivityForm" style="display:none; margin: 15px 0; border: 1px solid #ccc; padding: 15px; border-radius: 8px; background: #f9f9f9;">
                    <label for="activityDate">اختر التاريخ:</label>
                    <select id="activityDate"></select>
                    <br />
                    <label for="activityDesc">وصف النشاط (اختياري):</label>
                    <textarea id="activityDesc" rows="2" style="width: 100%;"></textarea>
                    <br />
                    
                    <!-- قائمة الأنشطة المتاحة -->
                    <div style="margin: 15px 0;">
                        <label>اختر النشاط:</label>
                        <div id="activityOptions" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px; margin-top: 10px;">
                            <!-- سيتم ملء هذا القسم بالأنشطة المتاحة -->
                        </div>
                    </div>
                    
                    <button id="cancelActivityBtn" class="add-btn" type="button">إلغاء</button>
                </div>
            
                <!--هي بس لاخد رقم الصف بملف الjs-->
                <div id="get_class_id" data-class-id="<%= classId %>">
                </div>
            
                <!-- قائمة الأنشطة المضافة -->
                <div class="activities-list" id="activitiesList">
                    <!-- سيتم عرض الأنشطة المضافة هنا -->
                    <div id="todayActivities"></div>
                </div>
            </div>
            <!-- قسم الملفات -->
        <div class="files-section">
            <div class="section-title">
                <h3 id="file">ملفات الانجليزي لليوم</h3>

                <button class="add-btn" id="fileDatebtn">عرض ملفات يوم اخر</button>
                <form id="fileDateForm" style="display:none;">
                    <select id ="day" name="day"> </select>
                    <select id ="month" name="month"> </select>
                    <select id ="year" name="year"> </select>
                    <button type="button"class="add-btn"  id="dateSelectFilebtn" >عرض</button>
                    <button type="button" class="add-btn" id="cencelDateSelectFilebtn" >إلغاء</button>
                </form>


                <button class="add-btn" id="showAddFilebtn">رفع ملف</button>
                <form action="/upload" method="POST" enctype="multipart/form-data" id="addFileForm" style="display:none;">

                    <label class="add-btn" >
                        <i class="fas fa-upload "> اختيار ملف</i> 
                    <input type="file" name="file" id="file" required />
                    </label>
 
                    <input type="hidden" name="class_id" value="<%=classId%>">
                    <input type="hidden" name="type" value="english" >
                    <input type="text" placeholder="ادخل وصفاً للملف" name="description" >

                    <select id="activitySelect"  name="daily_activity_id">  </select>
                    <select id ="flieDateSelect" name="date"> </select>
                    <button type="button"class="add-btn"  id="addFilebtn" >رفع</button>
                    <button type="button" class="add-btn" id="cencelAddFilebtn" >إلغاء</button>
                </form>




            </div>




            <div class="files-list">
                <div id="todayFiles"></div>

            </div>


        </div>

                    <!-- قائمة الأطفال -->
            <div class="students-list">
                <h3 id="child" class="section-title">قائمة الأطفال</h3>
                <table>
                    <thead>
                        <tr>
                            <th>اسم الطفل</th>
                            <th>تاريخ الميلاد</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (students && students.length> 0) { %>
                            <% students.forEach(student=> { %>
                                <tr>
                                    <td>
                                        <%= student.first_name %>
                                            <%= student.last_name %>
                                    </td>
                                    <td>
                                        <%= student.birth_date %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="2">لا يوجد أطفال مرتبطين بك حالياً.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>


        
    </div>
    </div>

    <script src="/englishTeacher.js"></script>
</body>

</html>

<script>
//لحطله ايام الاسبوع بالقائمة
const dateSelect = document.getElementById("flieDateSelect");
dateSelect.innerHTML = '<option disabled selected>اختر تاريخًا</option>';

for (let i = 0; i < 7; i++) {
  const date = new Date();
  date.setDate(date.getDate() - i);
  const isoDate = date.toISOString().split('T')[0];

  const option = document.createElement("option");
  option.value = isoDate;
  option.textContent = isoDate;
  dateSelect.appendChild(option);
}

//قائمة عرض توايخ السنه
const daySelect = document.getElementById("day");
const monthSelect = document.getElementById("month");
const yearSelect = document.getElementById("year");

// تعبئة الأيام (1 إلى 31)
for (let i = 1; i <= 31; i++) {
    const option = document.createElement("option");
    option.value = i;
    option.textContent = i;
    daySelect.appendChild(option);
  }

  // أسماء الشهور بالعربي
  const monthNames = [
    "يناير", "فبراير", "مارس", "أبريل", "مايو", "يونيو",
    "يوليو", "أغسطس", "سبتمبر", "أكتوبر", "نوفمبر", "ديسمبر"
  ];

  // تعبئة الشهور
  monthNames.forEach((month, index) => {
    const option = document.createElement("option");
    option.value = index + 1; // القيم من 1 إلى 12
    option.textContent = month;
    monthSelect.appendChild(option);
  });

  // تعبئة السنوات (السنة الحالية والسنة الماضية فقط)
  const thisYear = new Date().getFullYear();
  const years = [thisYear, thisYear - 1];

  years.forEach(year => {
    const option = document.createElement("option");
    option.value = year;
    option.textContent = year;
    yearSelect.appendChild(option);
  });


document.getElementById("addFilebtn").addEventListener("click", async () => {
    //بجيب الفورم اول شي
    const form = document.getElementById("addFileForm");
    const formData = new FormData(form);

    try {
        const res = await fetch("/upload", {
            method: "POST",
            body: formData
        });

        const result = await res.json();

        if (result.success) {
            alert("تم رفع الملف بنجاح!");
            await loadFiles(new Date().toLocaleDateString('sv-SE'));
            form.reset();
            form.style.display = "none";
            document.getElementById('showAddFilebtn').style.display ="block";

        } else {
            alert("فشل في رفع الملف.");
        }

    } catch (err) {
        console.error(err);
        alert("حدث خطأ أثناء رفع الملف.");
    }
});

</script>


<script>
    const container = document.getElementById('activityOptions');
    const classIdFromServer = <%= classId %>;

    activities.forEach(act => {
      const div = document.createElement('div');
      div.classList.add('activity-option');
      div.setAttribute('data-activity', act.name);
  
      div.innerHTML = `
        <i class="fas ${act.icon}"></i>
        <span>${act.name}</span>
        <div class="description-form" style="display: none; margin-top: 10px;">
          <textarea placeholder="اكتب وصف النشاط..." class="description-text"></textarea>
          <button class="submit-description">إرسال</button>
        </div>
      `;
  
      // عند الضغط على النشاط، نعرض حقل الوصف
      div.addEventListener('click', (e) => {
        // إذا كان الضغط على textarea أو زر الإرسال، لا تفعل شيء
        if (e.target.classList.contains('description-text') || e.target.classList.contains('submit-description')) {
          return;
        }
        const form = div.querySelector('.description-form');
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
      });

      // منع إغلاق المستطيل عند الضغط داخل textarea
      div.querySelector('.description-text').addEventListener('click', (e) => {
        e.stopPropagation();
      });
      // منع إغلاق المستطيل عند الضغط على زر الإرسال
      div.querySelector('.submit-description').addEventListener('click', async (e) => {
        e.stopPropagation(); // ما نخلي الضغط يوصل للنشاط ويعيد الفتح
        const description = div.querySelector('.description-text').value;

        try {
          const res = await fetch('/api/insertTodayEnglishDailyActivity', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              activityName: act.name,
              description: description ,
               classId: classIdFromServer
            })
          });

          const data = await res.json();
          console.log('Response from server:', data);
          if (data.success) {
            alert('تم إضافة النشاط بنجاح');
            div.querySelector('.description-text').value = '';
            div.querySelector('.description-form').style.display = 'none';
            await loadTodayEnglishActivities();
            document.getElementById("activityOptions").style.display = "none";

          } else {
            alert('فشل الإرسال: ' + data.message);
          }
        } catch (err) {
          console.error(err);
          alert(`حدث خطأ أثناء الإرسال :${err.message}`);
        }
      });
  
      container.appendChild(div);
    });
  </script>
  
  


